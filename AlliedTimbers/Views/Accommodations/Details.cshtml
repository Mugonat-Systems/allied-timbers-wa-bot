@model AlliedTimbers.Models.Accommodation

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style scoped>
    dd,
    dl {
        margin: 0;
        padding: 0;
    }

    a {
        color: #333;
        text-decoration: none;
    }

    dt,
    b {
        color: #392C70;
        font-size: 1.25em;
        text-transform: uppercase;
    }

    dd {
        font-size: 1.125em;
        font-weight: bold;
    }

    dd {
        margin-bottom: 1.125em;
    }

        dd.description {
            font-size: 0.9375em;
            line-height: 1.375em;
        }

    .product-images {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .product-image {
        max-width: 300px; /* Adjust as needed */
        height: auto;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .product-details {
        display: flex;
        align-items: flex-start;
    }

    .details-info {
        margin-left: 20px;
    }

    .btn-back {
        margin-top: 20px;
    }
</style>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4>Accommodation Details</h4>
                    <hr />

                    <section class="resource-details">
                        <div class="product-details">
                            <div class="product-images">
                                @if (!string.IsNullOrEmpty(Model.Image1))
                                {
                                    <img src="@Url.Content(Model.Image1)" alt="@Model.Name" class="product-image" />
                                }
                                @if (!string.IsNullOrEmpty(Model.Image2))
                                {
                                    <img src="@Url.Content(Model.Image2)" alt="@Model.Name" class="product-image" />
                                }
                            </div>

                            <dl class="details-info">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Name)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Name)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Description)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Description)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Price)
                                </dt>
                                <dd>
                                    @string.Format(new System.Globalization.CultureInfo("en-US"), "{0:C}", Model.Price)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Status)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Status)
                                </dd>
                            </dl>
                        </div>
                    </section>

                    <div class="btn-back">
                        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-warning" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
