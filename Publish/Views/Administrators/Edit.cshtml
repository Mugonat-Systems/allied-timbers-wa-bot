@model AlliedTimbers.Models.ApplicationUser

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var db = new AlliedTimbers.Models.ApplicationDbContext();
    var branchNames = db.CompanyBranches.AsNoTracking().Select(s => s.Name).ToList();
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        @using (Html.BeginForm("Edit", "Administrators", FormMethod.Post))
                        {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            <h3>Edit User</h3>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Id)
                            
                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-5">
                                    <details class="mb-3">
                                        <summary class="pb-2">BranchName</summary>
                                        <fieldset>
                                            @Html.DropDownListFor(model => model.Branch,
                                            new SelectList(branchNames)
                                            , new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Branch, "", new { @class = "text-danger" })
                                        </fieldset>
                                    </details>
                                </div>

                                <div class="col-md-5">
                                    <details class="mb-3">
                                        <summary class="pb-2">UserRole</summary>
                                        <fieldset>
                                            <select name="RoleName">
                                                @if (Model.RoleName == "Admin")
                                                {
                                                    <option value="Admin">Admin</option>
                                                    <option value="Manager">Manager</option>
                                                }
                                                else
                                                {
                                                    <option value="Manager">Manager</option>
                                                    <option value="Admin">Admin</option>

                                                }
                                            </select>
                                        </fieldset>
                                    </details>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Save" class="btn btn-outline-warning" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <button onclick="window.location.href='@Url.Action("Index", "Administrators" )'"
                                                type="button" class="btn btn-info">
                                            Cancel
                                        </button>
                                    </div>
                                </div>
                            </div>

                        </div>
            }
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



