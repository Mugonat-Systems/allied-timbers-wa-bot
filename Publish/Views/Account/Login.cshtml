@model AlliedTimbers.Models.LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login - AlliedTimbers Finance</title>

    <link rel="stylesheet" href="/Content/vendors/iconfonts/font-awesome/css/all.min.css">
    <link rel="stylesheet" href="/Content/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="/Content/vendors/css/vendor.bundle.addons.css">

    <link rel="stylesheet" href="/Content/Site.css">
    <link rel="icon" type="image/png" href="/Content/assets/images/money_mart.png"/>
    <style>
        .btn-primary, .navbar.default-layout-navbar.navbar-primary .navbar-menu-wrapper .navbar-nav .nav-item .nav-link .btn-primary, .wizard > .actions a {
            background-color: #2FA948;
            border-color: #2FA948;
        }
    </style>
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row w-100">
                    <div class="col-lg-6 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div style="text-align:center;" class="brand-logo">
                                <img src="~/Content/assets/images/cropped-money_mart.png"
                                     alt="logo" />
                            </div>
                            <h4 style="text-align:center">Sign in to continue.</h4>
                            <form action="/Account/Login" method="post" class="pt-3">

                                @Html.AntiForgeryToken()
                                <span style="color:red;">
                                    @Html.ValidationSummary()
                                </span>
                                <div class="form-group">
                                    <input type="email" name="Email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-outline-warning btn-lg font-weight-medium auth-form-btn">SIGN IN</button>
                                </div>
                                @*<div class="my-2 d-flex justify-content-between align-items-center">
                                        <div >
                                            <a href="/Account/ForgotPassword">
                                                Forgot Password
                                            </a>
                                        </div>

                                    </div>*@

                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>

    <script src="/Content/vendors/js/vendor.bundle.base.js"></script>
    <script src="/Content/vendors/js/vendor.bundle.addons.js"></script>
</body>



</html>