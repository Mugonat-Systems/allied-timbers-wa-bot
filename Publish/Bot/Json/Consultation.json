{
  "$schema": "https://nuget.mugonat.com/content/botengine/schemas/v2/schema.json",
  "consultation": {
    "type": "text",
    "trigger": "consultationBooking",
    "onReceive": "FxSaveConsultationName",
    "message": "Enter your full name",
    "response": {
      "any": "consultationEmail"
    }
  },
  
  "consultationEmail": {
    "type": "text",
    "message": "Enter your email address",
    "validate": [ "FxValidateEmail" ],
    "onReceive": "FxSaveConsultationEmail",
    "response": {
      "any": "consultationPhone"
    }
  },
  
  "consultationPhone": {
    "type": "text",
    "message": "Enter your phone number",
    "validate": ["FxValidatePhoneNo"],
    "onReceive": "FxSaveConsultationPhone",
    "response": {
      "any": "consultationDay"
    }
  },
  "consultationDay": {
    "type": "text",
    "message": "Enter preferred consultation date e.g 01/01/2020",
    "validate": ["FxValidateDate"],
    "onReceive": "FxSaveConsultationDay",
    "response": {
      "any": "ConsultationPeriodOfTime"
    }
  },
  
  "ConsultationPeriodOfTime": {
    "type": "text",
    "message": "Enter preferred period of time e.g 10:00",
    "validate": ["FxValidateTime"],
    "onReceive": "FxSaveConsultationPeriodOfTime",
    "response": {
      "any": "ConsultationServiceTyped"
    }
  },

  "ConsultationServiceTyped": {
    "type": "text",
    "message": "Enter specific service or reason for consultation e.g meeting, consultation",
    "onReceive": "FxSaveConsultation",
    "response": {
      "any": "saveConsultation"
    }
    },
  "saveConsultation": {
    "type": "buttons",
    "message": {
      "body": "Thank you for booking consultation. I will get back to you shortly.",
      "buttons": [
        "Menu"
      ]
    }
  }
}